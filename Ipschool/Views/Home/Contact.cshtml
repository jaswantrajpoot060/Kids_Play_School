@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="../assets1/images/bg/bg3.jpg">
    <div class="container pt-70 pb-20">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-theme-color-yellow font-36">Contact</h2>
                    <ol class="breadcrumb text-left mt-10">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Pages</a></li>
                        <li class="active text-white">Contact</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Divider: Contact -->
<section class="divider">
    <div class="container">
        <div class="row pt-30">
            <div class="col-md-6">
                @if (ViewBag.Msg != "")
                {

                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Well done!</strong> @ViewBag.Msg!
                    </div>
                }
                <h3 class="line-bottom mt-0 mb-30">Interested in discussing?</h3>

                <!-- Contact Form -->
                @using (Html.BeginForm("Mailer", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @id = "contact_form", @role = "form", method = "post" }))
                {
                    @Html.ValidationSummary()
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Name <small>*</small></label>
                                <input type="text" name="name" id="name" class="form-control required name" placeholder="Enter Name" required="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email <small>*</small></label>
                                <input type="email" name="email" id="email" class="form-control required email" placeholder="Enter Email" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Subject <small>*</small></label>
                                <input type="text" name="subject" id="subject" class="form-control required" placeholder="Enter Subject" required="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" name="mobile" id="mobile" class="form-control required" placeholder="Enter Phone" required="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea name="message" id="message" class="form-control required" rows="5" placeholder="Enter Message" required=""></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark btn-theme-color-sky btn-flat mr-5">Send your message</button>
                    </div>
                }
            </div>
            <div class="col-md-6">
                <h3 class="line-bottom mt-0">Get in touch with us</h3>
                <ul class="styled-icons icon-dark icon-sm icon-circled mb-20">
                    <li><a href="#facebook" data-bg-color="#3B5998"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#twitter" data-bg-color="#02B0E8"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#vk" data-bg-color="#4C75A3"><i class="fa fa-vk"></i></a></li>
                    <li><a href="#insta" data-bg-color="#D9CCB9"><i class="fa fa-instagram"></i></a></li>
                    <li><a href="#plus" data-bg-color="#D71619"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#android" data-bg-color="#A4CA39"><i class="fa fa-android"></i></a></li>
                    <li><a href="#vk" data-bg-color="#4C75A3"><i class="fa fa-vk"></i></a></li>
                </ul>

                <div class="icon-box left media bg-deep p-30 mb-20">
                    <a class="media-left pull-left" href="#"> <i class="pe-7s-map-2 text-theme-color-red"></i></a>
                    <div class="media-body">
                        <h5 class="mt-0">Our Office Location</h5>
                        <p>#405, Lan Streen, Los Vegas, USA</p>
                    </div>
                </div>
                <div class="icon-box left media bg-deep p-30 mb-20">
                    <a class="media-left pull-left" href="#"> <i class="fa fa-skype text-theme-color-sky"></i></a>
                    <div class="media-body">
                        <h5 class="mt-0">Email Address</h5>
                        <p><a href="mailto:info@ipseducation.in">info@ipseducation.in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
